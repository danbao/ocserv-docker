#!/bin/sh

server_ip="Your server IP"

mkdir /opt/certs
cd /opt/certs

cat >ca.tmpl << _EOF_
cn = "VPN CA" 
organization = "Big Corp" 
serial = 1 
expiration_days = 3650 
ca 
signing_key 
cert_signing_key 
crl_signing_key 
_EOF_

cat >server.tmpl << _EOF_ 
cn = "$server_ip" 
organization = "VPN SERVER" 
expiration_days = 3650
signing_key 
encryption_key 
tls_www_server 
_EOF_

echo "Generating certs's template successfully"
